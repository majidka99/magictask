{
  "name": "majitask",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "nodemon server/index.js",
    "build": "tsc && vite build",
    "start": "node server/index.js",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "migrate:auth": "mysql -u $DB_USER -p$DB_PASSWORD -h $DB_HOST $DB_NAME < migrations/20250701_create_auth_tables.sql",
    "migrate:tasks": "mysql -u $DB_USER -p$DB_PASSWORD -h $DB_HOST $DB_NAME < migrations/20250702_create_tasks_tables.sql",
    "migrate:all": "npm run migrate:auth && npm run migrate:tasks",
    "deploy:prod": "sudo ./deploy-production.sh",
    "verify:prod": "./verify-production.sh",
    "backup:now": "sudo /root/bin/server_backup.sh",
    "logs:app": "journalctl -u majitask_v1 -f",
    "logs:backup": "tail -f /var/log/majitask_v1_backup.log",
    "status": "systemctl status majitask_v1",
    "restart": "sudo systemctl restart majitask_v1"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.16.8",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "zustand": "^4.4.7",
    "express": "^4.18.2",
    "nodemailer": "^6.9.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "mysql2": "^3.6.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "compression": "^1.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/google.maps": "^3.58.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "nodemon": "^3.0.2",
    "vite-plugin-pwa": "^0.16.4"
  }
}
