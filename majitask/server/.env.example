# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=majitask_user
DB_PASSWORD=your_secure_password_here
DB_NAME=majitask

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-for-security
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long-for-security

# Server Configuration
PORT=3863
NODE_ENV=development
API_BASE_URL=http://localhost:3863

# CORS Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://app.majitask.fun

# Email Configuration (for password reset, verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=majitask.fun@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=majitask.fun@gmail.com
ADMIN_EMAIL=majitask.fun@gmail.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Logging
LOG_LEVEL=info
SLOW_QUERY_THRESHOLD=300

# SSL (for production)
DB_SSL=false

# Session Configuration
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
